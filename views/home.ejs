<%- include("partials/header") -%>

<h1>Home</h1>

<p>
  <%= homeStartingContent %>
</p>

  <% posts.forEach(function(post) { %>
    <h1> <%= post.title %> </h1>

  <%  if (post.post.length > 100) { %>
      <p> <%= post.post.slice(0,100) %> ... <a href="/post/<%= post.title %>">Read More</a></p>
  <%  } else { %>
      <p> <%= post.post %> </p>
  <%  } %>


    <% }) %>

<a href="/compose"><button class="btn btn-primary" name="button">Add a post</button></a>

<%- include("partials/footer") -%>
